fn test_loops() {
    // Infinite loop
    loop {
        let x = 1;
        if (x == 1) {
            break;
        }
    }

    // While loop
    let counter = 0;
    while (counter != 10) {
        counter = counter + 1;
    }

    // For loop (C-style)
    for (let i = 0; i < 10; i = i + 1) {
        let squared = i * i;
    }
}
